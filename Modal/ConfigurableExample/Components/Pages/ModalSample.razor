            .AddModalWidth(this)
            .AddModalPosition(this)
            .AddHeaderVisibilityOptions(this)
            .AddBackgroundCLickComportment(this)
            .AddFocusTrapComportment(this);
        ModalService.Show<SimpleModal>("Modal example", modalParameters, modalOptions);
    }

