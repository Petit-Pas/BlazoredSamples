@page "/"



<PageTitle>Configuration of Modals</PageTitle>

<button @onclick="ShowModal"> Show modal </button>

<div class="row">
    <div class="col-2">
        <h3> Content Size </h3>
        <InputRadioGroup Name="ContentSize" @bind-Value="@ContentSize">
            <InputRadio Name="ContentSize" Value="ModalContentSize.Small" /> small content <br />
            <InputRadio Name="ContentSize" Value="ModalContentSize.Normal" /> normal content <br />
            <InputRadio Name="ContentSize" Value="ModalContentSize.Huge" /> huge content <br />
        </InputRadioGroup>
    </div>
    <div class="col-2">
        <h3> Modal width </h3>
        <InputRadioGroup Name="ModalWidth" @bind-Value="@Width">
            <InputRadio Name="ModalWidth" Value="ModalWidth.Automatic" /> Automatic <br />
            <InputRadio Name="ModalWidth" Value="ModalWidth.Small" /> Small <br />
            <InputRadio Name="ModalWidth" Value="ModalWidth.Medium" /> Medium (default) <br />
            <InputRadio Name="ModalWidth" Value="ModalWidth.Large" /> Large <br />
            <InputRadio Name="ModalWidth" Value="ModalWidth.ExtraLarge" /> ExtraLarge <br />
            <InputRadio Name="ModalWidth" Value="ModalWidth.Custom" /> Custom <br />
        </InputRadioGroup>
    </div>
    <div class="col-2">
        <h3> Modal Position </h3>
        <InputRadioGroup Name="ModalPosition" @bind-Value="@Position">
            <InputRadio Name="ModalPosition" Value="ModalPosition.TopLeft" /> TopLeft <br />
            <InputRadio Name="ModalPosition" Value="ModalPosition.TopRight" /> TopRight <br />
            <InputRadio Name="ModalPosition" Value="ModalPosition.TopCenter" /> TopCenter (default) <br />
            <InputRadio Name="ModalPosition" Value="ModalPosition.Middle" /> Middle <br />
            <InputRadio Name="ModalPosition" Value="ModalPosition.BottomLeft" /> BottomLeft <br />
            <InputRadio Name="ModalPosition" Value="ModalPosition.BottomRight" /> BottomRight <br />
            <InputRadio Name="ModalPosition" Value="ModalPosition.Custom" /> Custom <br />
        </InputRadioGroup>
    </div>
    <div class="col-2">

        <h3> Header options </h3>
        <InputRadioGroup Name="HeaderOption" @bind-Value="@HeaderVisibility">
            <InputRadio Name="HeaderOption" Value="HeaderOption.ShowAll" /> ShowAll (default) <br />
            <InputRadio Name="HeaderOption" Value="HeaderOption.HideCloseButton" /> HideCloseButton  <br />
            <InputRadio Name="HeaderOption" Value="HeaderOption.HideAllHeader" /> HideAllHeader <br />
        </InputRadioGroup>
    </div>
    <div class="col-2">
        <h3> Background Click </h3>
        <InputRadioGroup Name="BackgroundClick" @bind-Value="@BackgroundClickShouldClose">
            <InputRadio Name="BackgroundClick" Value="true" /> Closes modal (default) <br />
            <InputRadio Name="BackgroundClick" Value="false" /> Do nothing <br />
        </InputRadioGroup>
    </div>
    <div class="col-2">
        <h3> Focus trap </h3>
        <InputRadioGroup Name="FocusTrap" @bind-Value="@ShouldTrapFocus">
            <InputRadio Name="FocusTrap" Value="true" /> Yes (default) <br />
            <InputRadio Name="FocusTrap" Value="false" /> No <br />
        </InputRadioGroup>
    </div>
</div>

@code {

